<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	
     
    <constant name="struts.enable.DynamicMethodInvocation" value="true" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.i18n.encoding" value="UTF-8" /> 
    
    <constant name="struts.custom.i18n.resources" value="messageResource" />  
    
    <constant name="struts.multipart.maxSize" value="1024102400" />  
     
    <constant name="struts.multipart.saveDir" value="d:/test" />  
    
    <package name="default" extends="struts-default">
	
        <action name="login" class="com.rishi.onlinestore.controller.RegisterAction" method="register">
            <result name="success">
                /frontend/register.jsp
            </result>  
        </action>
        <action name="register" class="com.rishi.onlinestore.controller.RegisterAction" method="register">
            <result name="success">
                /frontend/register.jsp
            </result>  
        </action>
        	
        <action name="user_save" class="com.rishi.onlinestore.controller.RegisterAction" method="usersave">
            <result name="success">
                /frontend/register.jsp
            </result>   
        </action> 
        
        <action name="products" class="com.rishi.onlinestore.controller.ProductsAction" method="showproducts">
            <result name="success">
                /frontend/products.jsp
            </result>   
        </action> 
        
        <action name="cart" class="com.rishi.onlinestore.controller.CartAction" method="showcart">
            <result name="success">
                /frontend/cart.jsp
            </result>   
        </action> 
        
        <action name="product" class="com.rishi.onlinestore.controller.ProductDetailAction" method="productdetail">
            <result name="success">
                /frontend/detail.jsp
            </result>   
        </action> 
        
        
    </package>
    
    <package name="backend" namespace="/backend" extends="struts-default">	
        <action name="login" class="com.rishi.onlinestore.admin.controller.LoginAction" method="login">
            <result name="success">
                /backend/dashboard.jsp
            </result>  
        </action>
        <action name="category*" class="com.rishi.onlinestore.admin.controller.CategoryAction" method="category{1}">
            <result name="success">
                /backend/category.jsp
            </result>  
        </action>
        <action name="addproduct" class="com.rishi.onlinestore.admin.controller.ProductAction" method="addproduct">
            <result name="success">
                /backend/addproduct.jsp
            </result>  
        </action>
    </package>
</struts>
