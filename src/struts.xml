<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	
     
    <constant name="struts.enable.DynamicMethodInvocation" value="true" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.i18n.encoding" value="UTF-8" /> 
    
    <constant name="struts.custom.i18n.resources" value="messageResource" />  
    
    <constant name="struts.multipart.maxSize" value="1024102400" />  
     
    <constant name="struts.multipart.saveDir" value="d:/test" />  
    
    <package name="default" extends="struts-default">

        	
        <action name="register" class="com.rishi.onlinestore.controller.RegisterAction" method="register">
            <result name="success">
                /frontend/register.jsp
            </result>  
        </action>
        	
        <action name="user_save" class="com.rishi.onlinestore.controller.RegisterAction" method="usersave">
            <result name="success">
                /frontend/register.jsp
            </result>   
        </action> 
    </package>
</struts>
